{% extends 'base.html.twig' %}

{% block title %}Create Your Secure Account{% endblock %}

{% block body %}

<style>
    body {
        background: linear-gradient(135deg, #0D1117, #121826);
        font-family: 'Poppins', sans-serif;
        color: #fff;
    }

    .auth-container {
        max-width: 460px;
        margin: 80px auto;
        background: rgba(255, 255, 255, 0.03);
        padding: 40px 35px;
        border-radius: 18px;
        backdrop-filter: blur(12px);
        box-shadow: 0 0 25px rgba(0, 255, 170, 0.12);
        border: 1px solid rgba(0, 255, 170, 0.15);
    }

    .auth-title {
        font-size: 28px;
        font-weight: bold;
        text-align: center;
        margin-bottom: 25px;
        letter-spacing: 1px;
        color: #00ffcc;
        text-shadow: 0 0 8px #00ffcc;
    }

    label {
        color: #9ab3d1;
        font-weight: 600;
    }

    .custom-input {
        width: 100%;
        padding: 12px 14px;
        border-radius: 12px;
        background: #0b0f19;
        border: 1px solid #1e2738;
        color: #fff;
        transition: 0.25s ease;
        margin-top: 6px;
    }

    .custom-input:focus {
        border-color: #00ffcc;
        box-shadow: 0 0 12px rgba(0, 255, 170, 0.25);
        outline: none;
    }

    .submit-btn {
        margin-top: 20px;
        width: 100%;
        background: linear-gradient(90deg, #00ffaa, #00ccff);
        padding: 12px 17px;
        border: none;
        border-radius: 14px;
        color: #000;
        font-weight: bold;
        font-size: 16px;
        cursor: pointer;
        box-shadow: 0 0 12px rgba(0, 255, 170, 0.25);
        transition: transform 0.2s, opacity 0.2s;
    }

    .submit-btn:hover {
        opacity: 0.9;
        transform: translateY(-2px);
    }

    .checkbox-row {
        margin-top: 15px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .checkbox-row label {
        margin: 0;
        cursor: pointer;
    }
</style>

<div class="auth-container">
    <h1 class="auth-title">Create Your Secure Account</h1>

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    {{ form_start(registrationForm) }}

        {{ form_row(registrationForm.email, {
            label: 'Email',
            attr: { class: 'custom-input', placeholder: 'Enter your email' }
        }) }}

        {{ form_row(registrationForm.plainPassword, {
            label: 'Password',
            attr: { class: 'custom-input', placeholder: 'Enter your password' }
        }) }}

        <div class="checkbox-row">
            {{ form_row(registrationForm.agreeTerms, { label: 'I agree to the terms' }) }}
        </div>

        <button type="submit" class="submit-btn">Register</button>

    {{ form_end(registrationForm) }}
</div>

{% endblock %}
