{% extends 'base.html.twig' %}

{% block title %}Admin - Create New User{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white text-center">
                        <h4>Create New User (Admin Only)</h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

                            {{ form_row(form.email) }}

                            {{ form_row(form.plainPassword.first, {label: 'Password'}) }}
                            {{ form_row(form.plainPassword.second, {label: 'Repeat Password'}) }}

                            <div class="form-check mb-3">
                                {{ form_widget(form.isAdmin) }}
                                {{ form_label(form.isAdmin) }}
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-success btn-lg">
                                    Create User
                                </button>
                            </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}