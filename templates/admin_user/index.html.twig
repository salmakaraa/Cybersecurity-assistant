{% extends 'admin_dashboard/layout.html.twig' %}

{% block admin_content %}
<h1>Users Management</h1>
<a href="{{ path('admin_user_new') }}" class="btn-create">â• Create New User</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles|join(', ') }}</td>
                <td>
                    <a href="{{ path('admin_user_edit', {id: user.id}) }}" class="btn-action btn-edit">âœï¸ Edit</a>
                    <a href="{{ path('admin_user_delete', {id: user.id}) }}" onclick="return confirm('Are you sure?')" class="btn-action btn-delete">ğŸ—‘ï¸ Delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No users found.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
