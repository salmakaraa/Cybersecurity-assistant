<div id="editModal" class="modal-overlay">
    <div class="modal-content">
        <h2>Edit Article</h2>

        <form id="editForm" method="POST" enctype="multipart/form-data">
            <label>Title</label>
            <input type="text" id="editTitle" name="title" class="form-control">

            <label>Description</label>
            <textarea id="editDescription" name="description" class="form-control"></textarea>

            <label>Change File (optional)</label>
            <input type="file" name="file" class="form-control">

            <div class="modal-buttons">
                <button type="submit" class="btn-save">Update</button>
                <button type="button" class="btn-close" onclick="closeEditModal()">Cancel</button>
            </div>
        </form>
    </div>
</div>

<style>
/* Modal overlay */
.modal-overlay {
    position: fixed;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background: rgba(0,0,0,0.75);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    animation: fadeIn 0.3s ease forwards;
}

/* Modal content */
.modal-content {
    background: #1a1f2e;
    color: #fff;
    width: 90%;
    max-width: 500px;
    padding: 30px;
    border-radius: 15px;
    box-shadow: 0 0 40px rgba(0,0,0,0.7);
    transform: scale(0.9);
    animation: scaleIn 0.3s ease forwards;
}

/* Headings */
.modal-content h2 {
    margin-bottom: 20px;
    font-size: 26px;
    color: #57a6ff;
    text-align: center;
}

/* Labels */
.modal-content label {
    display: block;
    margin-top: 15px;
    font-weight: 600;
}

/* Inputs & Textareas */
.modal-content input,
.modal-content textarea {
    width: 100%;
    padding: 12px;
    margin-top: 5px;
    border-radius: 8px;
    border: none;
    background: #11131d;
    color: #fff;
    font-size: 14px;
    resize: vertical;
}

/* Buttons container */
.modal-buttons {
    margin-top: 25px;
    display: flex;
    justify-content: flex-end;
    gap: 10px;
}

/* Save button */
.btn-save {
    background: #57a6ff;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
    transition: 0.3s;
}
.btn-save:hover {
    background: #2c79cf;
}

/* Close button */
.btn-close {
    background: #ff4d4d;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    font-weight: 600;
    transition: 0.3s;
}
.btn-close:hover {
    background: #d93636;
}

/* Animations */
@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}
@keyframes scaleIn {
    from { transform: scale(0.9); }
    to { transform: scale(1); }
}
</style>

<script>
function openEditModal(id, title, description) {
    const modal = document.getElementById('editModal');
    modal.style.display = 'flex';

    document.getElementById('editTitle').value = title;
    document.getElementById('editDescription').value = description;

    document.getElementById('editForm').action = '/admin/article/' + id + '/edit';
}

function closeEditModal() {
    document.getElementById('editModal').style.display = 'none';
}
</script>
