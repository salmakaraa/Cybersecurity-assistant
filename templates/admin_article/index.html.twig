{% extends 'admin_dashboard/layout.html.twig' %}

{% block admin_content %}
<div class="articles-header">
    <h1 class="title">Articles List</h1>
    <button class="btn-create new-article-btn" onclick="openCreateModal()">‚ûï Create New Article</button>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>PDF</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        {% for article in pagination %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.description|slice(0,50) ~ '...' }}</td>
                <td>
                    {% if article.filePath %}
                        <a href="/uploads/{{ article.filePath }}" target="_blank" class="btn-view">View PDF</a>
                    {% else %}
                        No file
                    {% endif %}
                </td>

                <td class="actions">
                    {% if article.createdBy.id == app.user.id %}
                        <button 
                            class="btn-action btn-edit" 
                            onclick="openEditModal({{ article.id }}, '{{ article.title|e('js') }}', '{{ article.description|e('js') }}')">
                            ‚úèÔ∏è Edit
                        </button>

                        <a href="{{ path('admin_article_delete', {id: article.id}) }}" 
                           onclick="return confirm('Are you sure you want to delete this article?')"
                           class="btn-action btn-delete">
                            üóëÔ∏è Delete
                        </a>
                    {% else %}
                        <button class="btn-action btn-edit" disabled style="opacity:0.5; cursor:not-allowed;">‚úèÔ∏è Edit</button>
                        <button class="btn-action btn-delete" disabled style="opacity:0.5; cursor:not-allowed;">üóëÔ∏è Delete</button>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No articles found.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{# Pagination Controls #}
<div class="pagination-wrapper">
    {{ knp_pagination_render(pagination) }}
</div>

<!-- Edit Modal -->
{% include 'admin_article/edit_modal.html.twig' %}

<!-- Create Modal -->
<div id="createModal" class="modal" style="display:none;">
    <div class="modal-content">
        <h2>Create New Article</h2>

        <form id="createForm" method="POST" action="{{ path('admin_article_new') }}" enctype="multipart/form-data">
            <label>Title</label>
            <input type="text" name="title" class="form-control" required>

            <label>Description</label>
            <textarea name="description" class="form-control"></textarea>

            <label>PDF File</label>
            <input type="file" name="file" class="form-control">

            <button class="btn-create mt-3">Create</button>
        </form>

        <button class="btn-close" onclick="closeCreateModal()">X</button>
    </div>
</div>

<style>
/* ==========================
   HEADER & NEW ARTICLE BUTTON
   ========================== */
.articles-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 35px;
}

.new-article-btn {
    background: linear-gradient(135deg, #57ff8a, #2cbf5f);
    padding: 12px 22px;
    border-radius: 15px;
    font-weight: 700;
    font-size: 16px;
    color: #fff;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
}
.new-article-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 20px rgba(87,255,138,0.6);
}

/* ==========================
   TABLE
   ========================== */
.table {
    width: 100%;
    border-collapse: collapse;
    background: rgba(255,255,255,0.03);
    border-radius: 15px;
    overflow: hidden;
    margin-bottom: 30px;
}

.table thead {
    background: rgba(255,255,255,0.06);
}

.table th, .table td {
    padding: 20px 18px;
    text-align: left;
    font-size: 15px;
}

.table tbody tr {
    background: rgba(255,255,255,0.03);
}

/* ==========================
   PAGINATION
   ========================== */
.pagination-wrapper {
    text-align: center;
    margin: 40px 0;
}

.pagination {
    display: inline-flex;
    list-style: none;
    padding: 0;
    background: rgba(255,255,255,0.05);
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
}

.pagination li {
    display: inline-block;
}

.pagination a, .pagination span {
    display: block;
    padding: 12px 18px;
    color: #fff;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
}

.pagination a:hover {
    background: rgba(87,166,255,0.4);
    transform: translateY(-2px);
}

.pagination .current {
    background: linear-gradient(135deg, #57a6ff, #2c79cf);
    color: #fff;
}

.pagination .disabled span {
    color: #888;
    cursor: not-allowed;
}

/* ==========================
   ACTION BUTTONS & MODALS (unchanged)
   ========================== */
.btn-action, .btn-view, .btn-create, .btn-close { /* your existing styles */ }
/* ... all your existing styles remain exactly the same ... */

/* Responsive table (your existing media query) */
@media (max-width: 768px) {
    /* your existing responsive styles */
}
</style>

<script>
function openCreateModal() {
    document.getElementById('createModal').style.display = 'flex';
}
function closeCreateModal() {
    document.getElementById('createModal').style.display = 'none';
}

function openEditModal(id, title, description) {
    document.getElementById('editModal').style.display = 'flex';
    document.getElementById('editTitle').value = title;
    document.getElementById('editDescription').value = description;
    document.getElementById('editForm').action = '/admin/article/' + id + '/edit';
}
function closeEditModal() {
    document.getElementById('editModal').style.display = 'none';
}
</script>

{% endblock %}