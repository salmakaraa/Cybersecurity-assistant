{% extends 'admin_dashboard/layout.html.twig' %}

{% block admin_content %}
<div class="articles-header">
    <h1 class="title">Articles List</h1>
    <button class="btn-create new-article-btn" onclick="openCreateModal()">‚ûï Create New Article</button>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>PDF</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.description|slice(0,50) ~ '...' }}</td>
                <td>
                    {% if article.filePath %}
                        <a href="/uploads/{{ article.filePath }}" target="_blank" class="btn-view">View PDF</a>
                    {% else %}
                        No file
                    {% endif %}
                </td>

                <td class="actions">
                    <button 
                        class="btn-action btn-edit" 
                        onclick="openEditModal({{ article.id }}, '{{ article.title|e('js') }}', '{{ article.description|e('js') }}')">
                        ‚úèÔ∏è Edit
                    </button>

                    <a href="{{ path('admin_article_delete', {id: article.id}) }}" 
                       onclick="return confirm('Are you sure you want to delete this article?')"
                       class="btn-action btn-delete">
                        üóëÔ∏è Delete
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No articles found.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<!-- Edit Modal -->
{% include 'admin_article/edit_modal.html.twig' %}

<!-- Create Modal -->
<div id="createModal" class="modal" style="display:none;">
    <div class="modal-content">
        <h2>Create New Article</h2>

        <form id="createForm" method="POST" action="{{ path('admin_article_new') }}" enctype="multipart/form-data">
            <label>Title</label>
            <input type="text" name="title" class="form-control" required>

            <label>Description</label>
            <textarea name="description" class="form-control"></textarea>

            <label>PDF File</label>
            <input type="file" name="file" class="form-control">

            <button class="btn-create mt-3">Create</button>
        </form>

        <button class="btn-close" onclick="closeCreateModal()">X</button>
    </div>
</div>

<style>
/* ==========================
   HEADER & NEW ARTICLE BUTTON
   ========================== */
.articles-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 35px;
}

.new-article-btn {
    background: linear-gradient(135deg, #57ff8a, #2cbf5f);
    padding: 12px 22px;
    border-radius: 15px;
    font-weight: 700;
    font-size: 16px;
    color: #fff;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
}
.new-article-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 20px rgba(87,255,138,0.6);
}

/* ==========================
   TABLE
   ========================== */
.table {
    width: 100%;
    border-collapse: collapse;
    background: rgba(255,255,255,0.03);
    border-radius: 15px;
    overflow: hidden;
}

.table thead {
    background: rgba(255,255,255,0.06);
}

.table th, .table td {
    padding: 20px 18px;
    text-align: left;
    font-size: 15px;
}

.table tbody tr {
    margin-bottom: 15px;
    background: rgba(255,255,255,0.03);
    border-radius: 12px;
}

/* ==========================
   ACTION BUTTONS
   ========================== */
.btn-action {
    display: inline-block;
    padding: 10px 18px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 14px;
    margin-right: 8px;
    text-align: center;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
}

.btn-edit {
    background: linear-gradient(135deg, #57a6ff, #2c79cf);
    color: #fff;
}
.btn-edit:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 6px 12px rgba(0,0,0,0.3);
}

.btn-delete {
    background: linear-gradient(135deg, #ff4d4d, #d93636);
    color: #fff;
}
.btn-delete:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 6px 12px rgba(0,0,0,0.3);
}

.btn-view {
    background: linear-gradient(135deg, #34db8a, #1ea64d);
    color: #fff;
    padding: 8px 14px;
    border-radius: 10px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
}
.btn-view:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 4px 8px rgba(0,0,0,0.3);
}

/* ==========================
   MODALS - CREATE & EDIT
   ========================== */
.modal {
    position: fixed;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background: rgba(0,0,0,0.6);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    transition: opacity 0.3s ease;
}

.modal-content {
    background: rgba(20, 25, 40, 0.95);
    width: 500px;
    max-width: 90%;
    padding: 30px;
    border-radius: 20px;
    box-shadow: 0 12px 40px rgba(0,0,0,0.6);
    backdrop-filter: blur(12px);
    color: #fff;
    position: relative;
}

.modal h2 {
    font-size: 26px;
    margin-bottom: 25px;
    color: #57a6ff;
    text-align: center;
}

.modal label {
    display: block;
    margin-top: 15px;
    font-weight: 600;
    color: #ccc;
}

.modal input.form-control,
.modal textarea.form-control {
    width: 100%;
    padding: 12px 15px;
    margin-top: 5px;
    border-radius: 12px;
    border: none;
    background: rgba(255,255,255,0.05);
    color: #fff;
    font-size: 14px;
    resize: vertical;
}

.modal input.form-control:focus,
.modal textarea.form-control:focus {
    outline: none;
    background: rgba(255,255,255,0.1);
    box-shadow: 0 0 10px rgba(87,166,255,0.5);
}

.btn-create {
    margin-top: 20px;
    padding: 14px 21px;
    font-size: 16px;
    font-weight: 700;
    border-radius: 15px;
    border: none;
    cursor: pointer;
    color: #fff;
    background: linear-gradient(135deg, #57ff8a, #2cbf5f);
    transition: all 0.3s ease;
    osition: absolute; right: 0; top: 50%; transform: translateY(-50%);
}


.btn-create:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 20px rgba(87,255,138,0.6);
}

.btn-close {
    position: absolute;
    top: 15px;
    right: 15px;
    padding: 6px 12px;
    background: rgba(255,255,255,0.1);
    color: #fff;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    font-weight: bold;
    transition: all 0.3s ease;

}

.btn-close:hover {
    background: #ff4d4d;
    transform: scale(1.2);
}

/* ==========================
   TABLE RESPONSIVE
   ========================== */
@media (max-width: 768px) {
    .table, .table thead, .table tbody, .table th, .table td, .table tr {
        display: block;
    }
    .table tr {
        margin-bottom: 20px;
        background: rgba(255,255,255,0.05);
        padding: 15px;
        border-radius: 12px;
    }
    .table td {
        text-align: right;
        padding-left: 50%;
        position: relative;
    }
    .table td::before {
        content: attr(data-label);
        position: absolute;
        left: 20px;
        width: 45%;
        font-weight: 600;
        text-align: left;
    }
}

</style>

<script>
function openCreateModal() {
    document.getElementById('createModal').style.display = 'flex';
}
function closeCreateModal() {
    document.getElementById('createModal').style.display = 'none';
}

// Edit modal
function openEditModal(id, title, description) {
    document.getElementById('editModal').style.display = 'flex';
    document.getElementById('editTitle').value = title;
    document.getElementById('editDescription').value = description;
    document.getElementById('editForm').action = '/admin/article/' + id + '/edit';
}
function closeEditModal() {
    document.getElementById('editModal').style.display = 'none';
}
</script>

{% endblock %}
