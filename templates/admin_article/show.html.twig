{% extends 'admin_dashboard/layout.html.twig' %}

{% block admin_content %}

<div class="article-header">
    <h1>{{ article.title }}</h1>

    <div class="actions">
        <button class="btn-edit" onclick="openEditModal()">Edit</button>

        <a href="{{ path('admin_article_delete', {id: article.id}) }}"
           onclick="return confirm('Are you sure you want to delete this article?')"
           class="btn-delete">
            Delete
        </a>
    </div>
</div>

<p>{{ article.description }}</p>

{% if article.filePath %}
    <embed src="/uploads/{{ article.filePath }}" type="application/pdf" width="100%" height="600px" />
{% else %}
    <p>No file uploaded.</p>
{% endif %}

<a href="{{ path('admin_article_index') }}" class="btn-back">Back</a>


{# ===================== MODAL POPUP ===================== #}

<div id="editModal" class="modal-overlay">
    <div class="modal-content">
        <h2>Edit Article</h2>

        <form method="POST" action="{{ path('admin_article_edit', {id: article.id}) }}" enctype="multipart/form-data">
            <label>Title</label>
            <input type="text" name="title" value="{{ article.title }}" class="form-control">

            <label>Description</label>
            <textarea name="description" class="form-control">{{ article.description }}</textarea>

            <label>Change File (optional)</label>
            <input type="file" name="file" class="form-control">

            <div class="modal-buttons">
                <button type="submit" class="btn-save">Save changes</button>
                <button type="button" class="btn-close" onclick="closeEditModal()">Cancel</button>
            </div>
        </form>
    </div>
</div>

{% endblock %}
